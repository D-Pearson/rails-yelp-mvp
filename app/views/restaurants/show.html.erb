<h1><strong>Reviews</strong></h1>

  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= @restaurant.category %>
  </p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %> stars</li>
  <% end %>
</ul>

<div class="div">
<%= link_to "Add review", new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>
</div>

<div class="div">
<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary"%>
</div>
